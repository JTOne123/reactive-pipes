<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
    <Version>1.3.9</Version>
    <Description>A scheduled background worker for reactive.pipes. Allows scheduling long-running tasks in the background.</Description>
    <Copyright>(c) 2012-2018 Daniel Crenna</Copyright>
    <PackageProjectUrl>http://github.com/danielcrenna/reactive-pipe</PackageProjectUrl>
    <RepositoryUrl>http://github.com/danielcrenna/reactive-pipe</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/danielcrenna/reactive-pipes/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>distributed scheduled background jobs</PackageTags>
    <PackageReleaseNotes>- v1.3.9 fix many referencing issues from legacy stream</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyName>reactive.pipes.scheduled</AssemblyName>
    <RootNamespace>reactive.pipes.scheduled</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>x86</PlatformTarget>
    <OutputPath>..\..\bin\lib\</OutputPath>
    <DocumentationFile>..\..\bin\lib\netstandard2.0\reactive.pipes.scheduled.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="1.50.4" />
    <PackageReference Include="ImpromptuInterface" Version="7.0.1-beta40" />
    <PackageReference Include="ncrontab" Version="3.3.0" />
    <PackageReference Include="System.Security.Principal.Windows" Version="4.4.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\reactive.pipes\reactive.pipes.csproj" />
  </ItemGroup>

</Project>
